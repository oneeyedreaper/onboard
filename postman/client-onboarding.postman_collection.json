        {
            "name": "Documents",
            "item": [
                {
                    "name": "Get All Documents",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/documents",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "documents"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Documents by Category",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/documents?category=ID_DOCUMENT",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "documents"
                            ],
                            "query": [
                                {
                                    "key": "category",
                                    "value": "ID_DOCUMENT"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Add Document",
                    "request": {
                        "method": "POST",
